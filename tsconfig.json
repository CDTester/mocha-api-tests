{
    "compilerOptions": {
        "target": "es2024",
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "noImplicitReturns": false,
        "strictNullChecks": false,
        "noImplicitAny": false
    },
    "include": ["./src/mocha-api-tests/*.ts"],
    "exclude": ["./src/mocha-api-tests/*.js"],
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "files": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "compilerOptions": {
            "target": "es2024",
            "module": "commonjs",
            "declaration": true,
            "declarationDir": "./types",
            "declarationMap": true,
            "resolveJsonModule": true,
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "strictPropertyInitialization": false,
            "noImplicitReturns": false,
            "strictNullChecks": false,
            "noImplicitAny": false
        },
        "include": ["./test/**/*.ts", "./src/**/*.ts"],
        "export": ["./node_modules"]
    }
}